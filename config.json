{
  "nodeController": {
    "id": "{host}_{dataset_id}",
    "name": "RPI XYZ",
    "description": "Description RPI XYZ",
    "host": "hostname",
    "dataset_id": "TERRAIN001",
    "mode": "debug|production",
    "status": "active",
    "communication": {
      "cloud": {
        "api_url": "https://api.cloudservice.com/v1/control",
        "api_key": "your-cloud-api-key"
      },
      "local": {
        "api_url": "http://localhost:8080/control"
      },
      "ping": {
        "purl": "https://status.server.com/check",
        "crontab": "/5 * * * *",
        "cmd": "curl {purl}"
      }
    },
    "specs": {
      "software": {
        "name": "NodeControllerClient",
        "version": "1.2.3",
        "git": "https://github.com/username/NodeControllerClient"
      },
      "hardware": {
        "name": "Raspberry Pi",
        "version": "pi3",
        "powerSource": "Battery"
      }
    },
    "location": {
      "geo": {
        "latitude": 48.8588443,
        "longitude": 2.2943506,
        "altitude": 45,
        "unit": "meters"
      },
      "address": {
        "building": "Building A",
        "floor": "3rd Floor",
        "room": "Room 305",
        "zone": "West Wing",
        "postalCode": "75007",
        "city": "Paris",
        "country": "France"
      },
      "description": "Sensor located in the west wing of Building A, 3rd floor, Room 305.",
      "indoor": true
    },
    "measurement": {
      "frequency": "1Hz",
      "mode": "slave | master"
    },
    "data": {
      "remote": [
        {
          "id": "username@serveur.com",
          "protocol": "rsync",
          "remote_path": "/home/icaging/icaging-litis/{hostname}",
          "ssh": {
            "user_host": "username@serveur.com",
            "command": "rsync -av --include='*_{dataset_id}_*.csv' {local_data_path}/ {user_host}:{remote_path}",
            "schedule": "*/15 * * * *"
          }
        }
      ],
      "local": {
        "path": "data/"
      }
    },
    "triggers": [
      {
        "condition": {
          "type": "battery_level",
          "from": "sensor_battery1",
          "operator": "less_than",
          "value": 10,
          "unit": "percent"
        },
        "action": {
          "type": "sleeping_mode",
          "target": "self",
          "message": "Battery level is critically low. Shutting down."
        }
      },
      {
        "condition": {
          "type": "sensor_value",
          "from": "sensor-001",
          "operator": "greater_than",
          "value": 75,
          "unit": "Celsius"
        },
        "action": {
          "type": "notify",
          "target": "arduino-001",
          "message": "Temperature exceeds safe threshold."
        }
      },
      {
        "condition": {
          "type": "scheduled",
          "datetime": "2024-10-16T08:30:00Z"
        },
        "action": {
          "type": "restart",
          "target": "self",
          "status": "restarting",
          "message": "Restarting system."
        }
      },
      {
        "condition": {
          "type": "once",
          "datetime": "now"
        },
        "action": {
          "type": "restart",
          "target": "self",
          "status": "restarting",
          "message": "Restarting system."
        }
      },
      {
        "condition": {
          "type": "once",
          "datetime": "now"
        },
        "action": {
          "type": "shutdown",
          "target": "self",
          "status": "shutdown",
          "message": "Restarting system."
        }
      }
    ],
